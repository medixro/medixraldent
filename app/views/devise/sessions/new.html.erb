<center>
<h2>Autentificare</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.input :password,label: "Parola", required: false %><br>
    <%#= f.input :remember_me, label: 'Tine minte datele de autentificare',as: :boolean if devise_mapping.rememberable? %><br>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Autentificare" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
</center>