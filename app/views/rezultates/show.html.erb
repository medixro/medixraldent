<%- model_class = Rezultate -%>
<div class="page-header">
  <% p = Pacient.find(@rezultate.pacient_id) %>
  <h1>Diagnostic pacient <%= p.prenume %> <%= p.nume %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name("Rezultat examinare") %>:</strong></dt>
  <dd><%= @rezultate.exam %></dd>
  <dt><strong><%= model_class.human_attribute_name('Diagnostic') %>:</strong></dt>
  <dd><%= @rezultate.diagn %></dd>
  <dd><%= @rezultate.var %></dd>

 
  
</dl>
<br><br>
<div class="form-actions">
  <%= link_to 'Inapoi',
              pacients_path, :class => 'btn btn-info'  %>
  <%= link_to 'Modifica',
              edit_rezultate_path(@rezultate), :class => 'btn btn-info' %>
              
</div>
<br>
<h2> Imagini atasate diagnosticului</h2><br><br>
<%= image_tag @rezultate.image_url.to_s%>

