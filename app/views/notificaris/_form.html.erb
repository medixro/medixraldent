<%= simple_form_for @notificari, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :text , :as => :text, label: 'Continut notificare:', placeholder: 'Introdu continutul notificarii' , input_html: { :rows => 10 } %>
 
  <div class="form-actions">
    <%= f.button :submit,"Salveaza", :class => 'btn-primary' %>
    <%= link_to 'Anuleaza',
                notificaris_path, :class => 'btn' %>
  </div>
<% end %>
